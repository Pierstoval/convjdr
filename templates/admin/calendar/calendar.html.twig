{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    {{ 'Calendar'|trans }}
{% endblock %}

{% block main %}
    {{ include('admin/calendar/_event_choice.html.twig', {events: events, event: event ?? null}, with_context = false) }}

    <hr>

    {% if event is defined %}
        {{ include('admin/calendar/_event_view.html.twig', {
            events: events,
            venue: venue,
            hours: hours,
            time_slots: time_slots,
            event: event,
        }, with_context = false) }}
    {% endif %}
{% endblock %}
